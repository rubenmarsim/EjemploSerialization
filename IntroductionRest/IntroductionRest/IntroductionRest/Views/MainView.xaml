<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntroductionRest.Views.MainView"
             Title="Rest Services">
  <StackLayout>
    <Button
      Text="HttpClient"
      Command="{Binding HttpClientCommand}"/>
    <Button 
      Text="HttpWebRequest"
      Command="{Binding HttpWebRequestCommand}"/>
    <Button
      Text="RestSharp"
      Command="{Binding RestSharpCommand}"/>
    <Button
      Text="Serialization"
      Command="{Binding SerializationCommand}"/>
  </StackLayout>
</ContentPage>